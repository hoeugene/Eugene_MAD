<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eugene.proj3milestone2.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/power_button"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/power_button"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/power_button" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/power"
        android:id="@+id/power_button"
        android:alpha="0.5"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="126dp"
        android:layout_marginEnd="124dp"
        app:layout_constraintRight_toRightOf="@+id/volume_up"
        android:layout_marginTop="81dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/volume_down"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="92dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/volume_down"
        android:id="@+id/volume_down"
        android:alpha=".5"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/power_button"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="100dp"
        app:srcCompat="@drawable/volume_up"
        android:id="@+id/volume_up"
        android:alpha=".5"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/volume_down" />
</android.support.constraint.ConstraintLayout>
